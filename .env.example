# Flask Configuration
FLASK_ENV=production
PORT=5000

# Security - MUST be set for production
SECRET_KEY=your-super-secret-key-change-this-in-production
ADMIN_PASSWORD=your-strong-admin-password-here

# Optional: Database URL (for future PostgreSQL support)
# DATABASE_URL=postgresql://user:password@localhost/lost_found

# Cloud Storage Configuration (Optional)
# Set to 'true' to use AWS S3 instead of local filesystem
USE_S3=false

# AWS S3 Credentials (required if USE_S3=true)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-bucket-name
# AWS_S3_REGION=us-east-1
